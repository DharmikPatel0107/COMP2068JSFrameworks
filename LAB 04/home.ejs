<!-- views/home.ejs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Fav Singers</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }
        .jumbotron {
          margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <%- include('partials/navbar') %>
        <div class="jumbotron">
            <h1>List of my favourite singers</h1>
            <p class="lead">Check out Singers and Genres Below</p>
            <div class="row">
                <div class="col-lg-12">
                    <div class="list-group">
                        <!-- Loop over singers and render them -->
                        <% singers.forEach(function(singer) { %>
                            <a href="/s/<%= singer.slug %>" class="list-group-item">
                                <h4 class="list-group-item-heading"><%= singer.name %></h4>
                                <p class="list-group-item-text"><%= singer.genre %></p>
                            </a>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
        <%- include('partials/footer') %>
    </div>
</body>
</html>